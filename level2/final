        let currentQuestion = 0;
        let answers = [];
        let scores = {
            ux: 0,
            product: 0,
            data: 0,
            ai: 0,
            mobile: 0,
            cyber: 0,
            iot: 0
        };

        function initQuiz() {
            renderQuestions();
            showQuestion(0);
            updateProgress();
        }

        function renderQuestions() {
            const container = document.getElementById('questionsContainer');
            questions.forEach((q, index) => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'question-container';
                questionDiv.id = `question-${index}`;
                
                questionDiv.innerHTML = `
                    <div class="question-number">×©××œ×” ${q.id} ××ª×•×š ${questions.length}</div>
                    <div class="question-text">${q.text}</div>
                    <div class="options" id="options-${index}">
                        ${q.options.map((opt, optIndex) => `
                            <div class="option" onclick="selectOption(${index}, ${optIndex})">
                                ${opt.text}
                            </div>
                        `).join('')}
                    </div>
                `;
                
                container.appendChild(questionDiv);
            });
        }

        function showQuestion(index) {
            document.querySelectorAll('.question-container').forEach(q => q.classList.remove('active'));
            document.getElementById(`question-${index}`).classList.add('active');
            
            // Update buttons
            document.getElementById('prevBtn').style.display = index === 0 ? 'none' : 'block';
            document.getElementById('nextBtn').textContent = index === questions.length - 1 ? '×¡×™×•× ×•×¨×•××™× ×ª×•×¦××•×ª! ğŸ‰' : '×”××©×š â†’';
            
            // Check if answer exists
            if (answers[index] !== undefined) {
                const optionElements = document.querySelectorAll(`#options-${index} .option`);
                optionElements[answers[index]].classList.add('selected');
            }
            
            updateProgress();
        }

        function selectOption(questionIndex, optionIndex) {
            // Remove previous selection
            document.querySelectorAll(`#options-${questionIndex} .option`).forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add new selection
            document.querySelectorAll(`#options-${questionIndex} .option`)[optionIndex].classList.add('selected');
            
            // Update scores
            if (answers[questionIndex] !== undefined) {
                // Remove old scores
                const oldScores = questions[questionIndex].options[answers[questionIndex]].scores;
                Object.keys(oldScores).forEach(key => {
                    scores[key] -= oldScores[key];
                });
            }
            
            // Add new scores
            const newScores = questions[questionIndex].options[optionIndex].scores;
            Object.keys(newScores).forEach(key => {
                scores[key] += newScores[key];
            });
            
            // Save answer
            answers[questionIndex] = optionIndex;
        }

        function nextQuestion() {
            if (answers[currentQuestion] === undefined) {
                alert('× × ×œ×‘×—×•×¨ ×ª×©×•×‘×” ×œ×¤× ×™ ×”××©×š');
                return;
            }
            
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                showQuestion(currentQuestion);
            } else {
                showResults();
            }
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion(currentQuestion);
            }
        }

        function updateProgress() {
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function showResults() {
            // Find highest score
            let maxScore = 0;
            let topCareer = '';
            
            Object.keys(scores).forEach(key => {
                if (scores[key] > maxScore) {
                    maxScore = scores[key];
                    topCareer = key;
                }
            });
            
            const career = careers[topCareer];
            
            // Hide questions and navigation
            document.getElementById('questionsContainer').style.display = 'none';
            document.getElementById('navigationButtons').style.display = 'none';
            document.querySelector('.progress-bar').style.display = 'none';
            
            // Show results
            const resultContainer = document.getElementById('resultContainer');
            resultContainer.innerHTML = `
                <div class="result-icon">${career.icon}</div>
                <h2 class="result-title">${career.title}</h2>
                <p class="result-description">${career.description}</p>
                
                <div class="result-details">
                    <div class="detail-section">
                        <div class="detail-title">ğŸ’¼ ××” ××ª ×ª×¢×©×™ ×‘×™×•×-×™×•×?</div>
                        <div class="detail-content">${career.daily}</div>
                    </div>
                    
                    <div class="detail-section">
                        <div class="detail-title">â­ ××™×•×× ×•×™×•×ª ×©×ª×¤×ª×—×™</div>
                        <div class="detail-content">${career.skills}</div>
                    </div>
                    
                    <div class="detail-section">
                        <div class="detail-title">ğŸ¯ ×“×•×’×××•×ª ×œ××” ×©×ª×•×›×œ×™ ×œ×¢×©×•×ª</div>
                        <div class="detail-content">${career.examples}</div>
                    </div>
                </div>
                
                <button class="btn btn-next" style="width: 100%; margin-top: 30px;">×‘×”×¦×œ×—×”! ğŸ’ª</button>
            `;
            
            resultContainer.classList.add('active');
        }

        // Initialize on load
        window.onload = initQuiz;
    </script>
